# ==========================================
# CREDENCIAIS QUOTEX
# ==========================================
# Use o email e senha da sua conta Quotex
# O bot usa a biblioteca PyQuotex oficial
QUOTEX_EMAIL=seu@email.com
QUOTEX_PASSWORD=sua_senha_aqui
QUOTEX_LANG=pt
QUOTEX_ENVIRONMENT=demo

# ==========================================
# CONFIGURAÇÕES DE TRADING
# ==========================================
INITIAL_BALANCE_BRL=1000
PAYOUT_RATIO=85.0
EXPIRATION_TIME=60

# Trading Pair
SYMBOL=EURUSD
BASE_CURRENCY=USDT
QUOTE_CURRENCY=EUR

# ==========================================
# EXCHANGE (para dados de candles)
# ==========================================
EXCHANGE=binance
API_KEY=your_api_key
API_SECRET=your_api_secret
API_PASSWORD=

# ==========================================
# MODE: paper (simulação) ou live (real)
# ==========================================
MODE=paper

# ==========================================
# SERVIDOR WEB (opcional)
# ==========================================
HOST=127.0.0.1
PORT=5000
DEBUG=false
