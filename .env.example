# ==========================================
# CREDENCIAIS AVALON BROKER
# ==========================================
# Use o email e senha da sua conta Avalon
AVALON_EMAIL=seu@email.com
AVALON_PASSWORD=sua_senha_aqui
AVALON_LANG=pt
AVALON_ENVIRONMENT=demo

# ==========================================
# CONFIGURAÇÕES DE TRADING
# ==========================================
INITIAL_BALANCE_BRL=1000
PAYOUT_RATIO=85.0
EXPIRATION_TIME=60

# Trading Pair
SYMBOL=EURUSD
BASE_CURRENCY=USDT
QUOTE_CURRENCY=EUR

# ==========================================
# EXCHANGE (para dados de candles)
# ==========================================
EXCHANGE=binance
API_KEY=your_api_key
API_SECRET=your_api_secret
API_PASSWORD=

# ==========================================
# MODE: paper (simulação) ou live (real)
# ==========================================
MODE=paper

# ==========================================
# SERVIDOR WEB
# ==========================================
HOST=0.0.0.0
PORT=5000
DEBUG=false

# ⚠️ IMPORTANTE: Gere uma chave secreta FORTE para produção!
# Execute: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production

# ==========================================
# BANCO DE DADOS (PostgreSQL - Opcional)
# ==========================================
# Opção 1: usar URL completa
# DATABASE_URL=postgresql://usuario:senha@host:5432/nome_db

# Opção 2: usar campos separados
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=robo_trade
POSTGRES_USER=postgres
POSTGRES_PASSWORD=troque_aqui
# SSL: disable | prefer | require (ajuste conforme seu servidor)
PGSSLMODE=prefer
